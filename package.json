{
  "name": "wordsto-link",
  "version": "1.0.0",
  "description": "URL shortener with multi-keyword pattern support",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node scripts/dev-server.js",
    "dev:backend": "nodemon src/server/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "node scripts/db-migrate.js",
    "db:migrate:create": "node src/db/migrate.js create",
    "db:migrate:status": "node src/db/migrate.js status",
    "db:migrate:rollback": "node src/db/migrate.js rollback",
    "db:seed": "node scripts/seed-data.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "env:validate": "node scripts/validate-env.js",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "url-shortener",
    "fastify",
    "postgresql",
    "redis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/backend": "^0.38.4",
    "@fastify/auth": "^4.6.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.4.1",
    "express": "^5.1.0",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.5",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "resend": "^6.0.3",
    "ua-parser-js": "^1.0.37",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@faker-js/faker": "^8.4.0",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
