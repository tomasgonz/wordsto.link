# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://wordsto:wordsto123@localhost:5432/wordsto_link
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wordsto_link
DB_USER=wordsto
DB_PASSWORD=wordsto123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Clerk Authentication
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_WEBHOOK_SECRET=your-clerk-webhook-secret

# JWT Configuration (for API keys)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Application Settings
BASE_URL=http://localhost:8080
# SHORT_URL_BASE - The base URL for generated short links
# For production: https://wordsto.link
# For development with local access: http://localhost:8080
# For development with remote access: http://your-ip-or-domain:8080
SHORT_URL_BASE=https://wordsto.link
MAX_KEYWORDS_FREE=10
MAX_KEYWORDS_PERSONAL=100
MAX_KEYWORDS_BUSINESS=1000
MAX_KEYWORDS_ENTERPRISE=10000

# Email Configuration
# Option 1: Resend (Recommended - Modern email API)
RESEND_API_KEY=re_YOUR_API_KEY_HERE

# Option 2: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email Settings
EMAIL_FROM=WordsTo.Link <noreply@wordsto.link>
FRONTEND_URL=http://localhost:3000
# Set to true to send emails in development mode
FORCE_EMAIL_SEND=false

# Stripe (optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
